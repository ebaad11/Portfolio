---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
---

<Layout title="Ebaad">
  <main class="container">
    <header class="header">
      <a href="/" class="logo">Ebaad</a>
    </header>
    
    <Navigation />
  </main>
</Layout>

<style>
  .container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    max-width: 600px;
  }

  .header {
    margin-bottom: 2rem;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    transition: opacity 0.2s ease;
  }

  .logo:hover {
    opacity: 0.8;
  }

  @media (max-width: 480px) {
    .container {
      padding: 1.5rem;
    }

    .logo {
      font-size: 1.1rem;
    }
  }
</style>
