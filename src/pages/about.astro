<style>
  .container {
    min-height: 100vh;
    padding: 2rem;
    max-width: 600px;
  }

  .back-link {
    display: inline-block;
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 3rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--text-primary);
  }

  .content p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .highlight {
    color: var(--text-primary);
    font-weight: 500;
  }

  .script-font {
    font-family: 'Ephesis', cursive;
    font-size: 1.5rem;
    color: var(--text-primary);
  }

  .indent {
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .content p a {
    color: var(--text-secondary);
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s ease;
  }

  .content p a:hover {
    color: var(--text-primary);
  }

  @media (max-width: 480px) {
    .container {
      padding: 1.5rem;
    }

    .indent {
      padding-left: 1rem;
    }
  }
</style>
